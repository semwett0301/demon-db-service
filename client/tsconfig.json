{
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "target": "es5",
    "lib": [
      "DOM"
    ],
    "allowJs": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "paths": {
      "atom": [
        "atom"
      ],
      "panels": [
        "panels"
      ],
      "api": [
        "api"
      ],
      "components": [
        "components"
      ],
      "types": [
        "types"
      ],
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
    "declaration.d.ts"
  ]
}
